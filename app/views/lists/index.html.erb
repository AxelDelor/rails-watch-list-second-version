<div style="background-image: url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D); background-size: cover;
    background-position: center;
    width: 100% ;
    height: 500px ;" class="banner-main">
  <p class="title-1">Welcome to your lists</p>
    <%= simple_form_for @list do |f| %>
      <%= f.input :name, placeholder: "Name of your list...", label_html: { class: "sr-only" }, input_html: { class: "form-control text-lg" } %>
      <div style="text-align: center">
      <%= f.submit "Add a list", class: "btn btn-primary", style: "margin-top: 1em;" %>
      </div>
    <% end %>
  </div>

<div class="container">
  <div class="container-card">
    <% @lists.each do |list| %>
        <%= link_to list_path(list) do %>
        <div class="card-genre">
        <p class="text-card-genre"><%= list.name %></p>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

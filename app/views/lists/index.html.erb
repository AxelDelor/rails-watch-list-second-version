<div style="background-image: url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D); background-size: cover;
    background-position: center;
    width: 100% ;
    height: 500px ;" class="flex flex-col justify-center items-center">
  <p class="title-1">Welcome to your lists</p>
    <%= simple_form_for @list do |f| %>
      <%= f.input :name %>
      <%= f.submit "Add a list", class: "btn btn-primary"%>
    <% end %>
  </div>

<div class="container">
  <div class="grid gap-4 grid-cols-4">
    <% @lists.each do |list| %>
        <%= link_to list_path(list) do %>
        <div class="bg-base-100 h-40 flex justify-center" style="background-color: whitesmoke; border-radius: 36px">
        <p class="text-center font-bold"><%= list.name %></p>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
